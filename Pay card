<body>

<div class="card">
    <div class="header">
        <h2>轉帳資訊</h2>
    </div>

    <div class="section">
        <div class="label">銀行代碼</div>
        <div class="value-box" onclick="copyText(this, 'showBank')">
            <span id="showBank">---</span>
        </div>
        <div class="hint">已複製代碼！</div>
    </div>

    <div class="section">
        <div class="label">銀行帳號</div>
        <div class="value-box" onclick="copyText(this, 'showAcc')">
            <span id="showAcc">---</span>
        </div>
        <div class="hint">已複製帳號！</div>
    </div>

    <div class="footer">點擊數字即可複製</div>
</div>

<script>
    // 1. 讀取網址參數
    const urlParams = new URLSearchParams(window.location.search);
    const bank = urlParams.get('b');
    const acc = urlParams.get('a');

    // 2. 顯示資料
    if(bank && acc) {
        document.getElementById('showBank').innerText = bank;
        document.getElementById('showAcc').innerText = acc;
    } else {
        document.querySelector('.card').innerHTML = "<p style='color:red'>⚠️ 錯誤：無效的連結</p>";
    }

    // 3. 複製功能
    function copyText(element, id) {
        const text = document.getElementById(id).innerText;
        
        // 執行複製
        navigator.clipboard.writeText(text).then(() => {
            // 顯示「已複製」提示
            const hint = element.nextElementSibling;
            hint.classList.add('show');
            setTimeout(() => hint.classList.remove('show'), 1500);
        }).catch(err => {
            alert('複製失敗，請手動複製');
        });
    }
</script>

</body>
</html>
